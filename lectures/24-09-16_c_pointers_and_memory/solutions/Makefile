CC=gcc
CFLAGS=-std=c11 -Wall -Wextra -pedantic -g

all: hexabyte int2ascii ascii2int

hexabyte: hexabyte.c
	$(CC) -o hexabyte hexabyte.c $(CFLAGS)

int2ascii: int2ascii.c
	$(CC) -o int2ascii int2ascii.c $(CFLAGS)

ascii2int: ascii2int.c
	$(CC) -o ascii2int ascii2int.c $(CFLAGS)

# Conventionally we provide a 'clean' target that removes the files
# generated by the other targets.

clean:
	rm -f hexabyte int2ascii ascii2int
